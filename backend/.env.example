# ========================================
# Portfolio Backend Configuration (.env)
# ========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Optional - MongoDB)
MONGODB_URI=mongodb://localhost:27017/portfolio
MONGODB_USER=admin
MONGODB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_to_something_long_and_random
JWT_EXPIRE=7d

# Email Configuration (Gmail/Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=jaya@gmail.com
EMAIL_PASSWORD=your_app_password_not_your_regular_password
EMAIL_ADMIN=jaya@gmail.com
SMTP_SERVICE=gmail

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5500,http://localhost:8000

# File Upload Settings
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads

# Application Info
APP_NAME=Jaya Chandra Portfolio
APP_VERSION=1.0.0
ADMIN_EMAIL=jaya@gmail.com

